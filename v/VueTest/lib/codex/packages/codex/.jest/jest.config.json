{
	"rootDir": "..",
	"transform": {
		".+\\.ts$": "ts-jest",
		".+\\.vue$": "@vue/vue3-jest"
	},
	"testEnvironment": "jsdom",
	"snapshotResolver": "<rootDir>/.jest/snapshotResolver.js",
	"collectCoverage": true,
	"coverageThreshold": {
		"global": {
			"branches": 80,
			"functions": 80,
			"lines": 80
		},
		"src/components-wip": {
			"branches": 0,
			"functions": 0,
			"lines": 0
		}
	},
	"collectCoverageFrom": [
		"<rootDir>/src/**/*.(ts|vue)",
		"!<rootDir>/src/**/*.(d|test|snap).ts",
		"!<rootDir>/src/constants.ts",
		"!<rootDir>/src/lib.ts",
		"!<rootDir>/src/lib-wip.ts",
		"!<rootDir>/src/start.ts",
		"!<rootDir>/src/types.ts"
	],
	"coverageDirectory": "<rootDir>/coverage",
	"errorOnDeprecated": true
}
