{
	"compilerOptions": {
		"target": "es2015",
		"useDefineForClassFields": true,
		"module": "es2015",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [ "es2015", "dom" ],
		"types": [ "jest" ],
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@wikimedia/codex": [ "../codex/src/lib-wip.ts" ]
		}
	},
	"include": [
		"./**/*.js",
		"./**/*.ts",
		"./**/*.vue",
		".jest/*.js",
		"./docs/.vitepress/**/*.js",
		"./docs/.vitepress/**/*.ts",
		"./docs/.vitepress/**/*.vue"
	],
	"exclude": [
		"coverage/**/*",
		"node_modules/**/*",
		"./docs/.vitepress/dist/**/*",
		"dist/*"
	]
}
