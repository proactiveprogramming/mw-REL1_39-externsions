{
	"name": "jeblad/pickle",
	"type": "mediawiki-extension",
	"description": "Provides basic functionality to do testing of modules in Mediawiki.",
	"keywords": [
		"wiki",
		"MediaWiki",
		"extension",
		"testing",
		"Pickle"
	],
	"homepage": "https://www.mediawiki.org/wiki/Extension:Pickle",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "John Erling Blad",
			"email": "jeblad@gmail.com",
			"role": "Developer"
		}
	],
	"support": {
		"wiki": "https://www.mediawiki.org/wiki/Extension:Pickle",
		"forum": "https://www.mediawiki.org/wiki/Extension_talk:Pickle",
		"source": "https://git.wikimedia.org/tree/mediawiki%2Fextensions%2FBootstrap",
		"issues": "https://phabricator.wikimedia.org/project/view/2053/",
		"irc": "irc://irc.freenode.org/mediawiki"
	},
	"config": {
		"prepend-autoloader": false,
		"optimize-autoloader": true
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": ">=0.9.2",
		"mediawiki/mediawiki-codesniffer": ">=0.7.2",
		"phpunit/phpunit": "4.8.*",
		"phpspec/prophecy": "~1.0",
		"liuggio/fastest": "~1.4",
		"jakub-onderka/php-console-highlighter": "0.3.2"
	},
	"scripts": {
		"fix": [
			"phpcbf"
		],
		"ldoc": [
			"ldoc includes/LuaLibrary/lua -l ./ -c ./config.ld"
		],
		"minify": [
			"find modules/images -type d -path minified -prune -o -type d -execdir svgo --pretty --indent=2 -i . -o ./minified \\;"
		],
		"unit": [
			"php ../../tests/phpunit/phpunit.php --wiki wiki --exclude-group LuaStandalone --group Pickle"
		],
		"codesize": [
			"phpmd ./includes/ text codesize",
			"phpmd ./tests/ text codesize"
		],
		"mess": [
			"phpmd ./includes/ text phpmd.xml",
			"phpmd ./tests/ text phpmd.xml"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s"
		],
		"export": [
			"php ../../maintenance/dumpBackup.php --current --pagelist=PAGELIST --output=file:pages.xml"
		],
		"import": [
			"php ../../maintenance/importDump.php pages.xml"
		]
	},
	"require": {
		"php": ">=5.6",
		"composer/installers": "~1.0",
		"ext-date": "*",
		"ext-xml": "*",
		"ext-Phar": "*"
	},
	"suggest": {
		"ext-apc": "Local data and opcode cache",
		"ext-tidy": "*",
		"ext-xdebug": "*"
	}
}
